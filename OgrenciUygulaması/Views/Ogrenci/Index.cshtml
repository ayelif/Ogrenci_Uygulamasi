@model IEnumerable<OgrenciUygulaması.Models.tOgrenci>

<h2>Öğrenciler</h2>

<p>
    @Html.ActionLink("Yeni Öğrenci Ekle", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Bölüm</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ad</td>
            <td>@item.soyad</td>
            <td>@item.Bolum.bolumAd</td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.ogrenciID }) |
                @Html.ActionLink("Detay", "Details", new { id = item.ogrenciID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.ogrenciID })
            </td>
        </tr>
    }
</table>
