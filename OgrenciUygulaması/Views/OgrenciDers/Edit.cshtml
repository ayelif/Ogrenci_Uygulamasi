@model OgrenciUygulaması.Models.tOgrenciDers

@{
    ViewBag.Title = "Ders Değiştir";
}

<h2>Ders Değiştir</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.ogrenciID)
        @Html.DropDownListFor(model => model.ogrenciID, (SelectList)ViewBag.Ogrenciler, "Öğrenci Seçin", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ogrenciID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.dersID)
        @Html.DropDownListFor(model => model.dersID, (SelectList)ViewBag.Dersler, "Ders Seçin", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.dersID)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.yil)
        @Html.TextBoxFor(model => model.yil, new { @class = "form-control", placeholder = "Yıl" })
        @Html.ValidationMessageFor(model => model.yil)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.yariyil)
        @Html.TextBoxFor(model => model.yariyil, new { @class = "form-control", placeholder = "Yarıyıl" })
        @Html.ValidationMessageFor(model => model.yariyil)
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
}