@{
    ViewBag.Title = "Öğrenci Takip Sistemi";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f5f5f5;
            padding-top: 50px;
        }

        h1, h2 {
            text-align: center;
            color: #333;
            margin-bottom: 40px;
        }

        .menu-box {
            background-color: #4285f4;
            color: white;
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            transition: background-color 0.3s ease;
            margin-bottom: 20px;
        }

            .menu-box:hover {
                background-color: #3367d6;
            }

            .menu-box a {
                color: white;
                text-decoration: none;
                font-size: 18px;
                display: block;
                padding: 15px 20px;
                margin: 10px 0;
                border-radius: 5px;
                background-color: #007bff;
                transition: background-color 0.3s ease;
            }

                .menu-box a:hover {
                    background-color: #0056b3;
                }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Öğrenci Takip Sistemi</h1>
  

        <div class="row">
            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("Index", "Ogrenci")" class="btn btn-primary">Öğrenci CRUD İşlemleri</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("Index", "Fakulte")" class="btn btn-primary">Fakülte CRUD İşlemleri</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("Index", "Ders")" class="btn btn-primary">Ders CRUD İşlemleri</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("Index", "Bolum")" class="btn btn-primary">Bölüm CRUD İşlemleri</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("Index", "OgrenciDers")" class="btn btn-primary">Öğrenciye Ders Atama</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("ListStudentCourses", "OgrenciDers")" class="btn btn-primary">Öğrenciye Ait Dersleri Listele</a>
                    <a href="@Url.Action("CoursesByYearList", "OgrenciDers")" class="btn btn-primary">Yıl ve Yarıyıla Göre Derslerin Seçim Durumu</a>
                </div>
            </div>

            <div class="col-12">
                <div class="menu-box">
                    <a href="@Url.Action("NotGirisi", "OgrenciDers")" class="btn btn-primary">Not Girişi</a>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
