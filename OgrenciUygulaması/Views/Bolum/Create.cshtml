@model OgrenciUygulaması.Models.tBolum

@{
    ViewBag.Title = "Yeni Bölüm Ekle";
}

<h2>Yeni Bölüm Ekle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.bolumAd)
        @Html.TextBoxFor(model => model.bolumAd, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.bolumAd)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fakulteID, "Fakülte Seç")
        @Html.DropDownListFor(model => model.fakulteID, (SelectList)ViewBag.FakulteID, "Fakülte Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.fakulteID)
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-secondary" })
}